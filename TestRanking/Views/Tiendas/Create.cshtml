@model TestRanking.Data.TblTiendas

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        Control de Tiendas
    </div>
    <div class="card-body">
        <h5 class="card-title">Crear Tiendas</h5>
        <div class="row">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NombreTienda" class="control-label"></label>
                    <input asp-for="NombreTienda" class="form-control" />
                    <span asp-validation-for="NombreTienda" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Logo" class="control-label">Logo</label>
                    <input name="Logo" type="file" accept="image/jpg" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Imagen" class="control-label">Imagen</label>
                    <input name="Imagen" type="file" accept="image/jpg" class="form-control" />
                    <span asp-validation-for="Imagen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    <div>
        <a asp-action="Index" class="btn btn-info">Atras</a>
    </div>
    </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
